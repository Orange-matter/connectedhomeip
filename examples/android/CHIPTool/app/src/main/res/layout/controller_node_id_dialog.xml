<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fabric_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:labelFor="@id/fabric_id_text"
        android:text="Fabric Id"
        android:textAppearance="@style/title_text"
        app:layout_constraintBaseline_toBaselineOf="@id/fabric_id_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/node_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:labelFor="@id/fabric_id_text"
        android:text="Node Id"
        android:textAppearance="@style/title_text"
        app:layout_constraintBaseline_toBaselineOf="@id/node_id_text"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="fabric_id_label,node_id_label" />

    <EditText
        android:id="@+id/fabric_id_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Fabric Id"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/node_id_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/node_id_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Node Id"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/fabric_id_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
